---
import Layout from '../../layouts/Layout.astro';
import { pageContent } from '../../content/siteContent';
import SiteHeader from '../../components/SiteHeader.astro';
import SiteFooter from '../../components/SiteFooter.astro';

const content = pageContent.en;
const { navLinks, topCtas, footer } = content;

const meta = {
	title: 'Services & Packages – Aiionwatha',
	description: 'Explore Aiionwatha services: funding, strategy, digital, AI, Indigenous relations, and governance.',
	url: 'https://www.aiionwatha.com/en/services',
	image: '/images/hero.webp',
	imageAlt: 'Aiionwatha services and packages list',
	locale: 'en_CA'
};

const alternates = [
	{ href: 'https://www.aiionwatha.com/services', hreflang: 'fr-CA' },
	{ href: 'https://www.aiionwatha.com/services', hreflang: 'x-default' }
];

const services = [
  { name: "Grant Optimization", value: "I find the right programs and fully prepare your applications, evidence, and funder follow-ups.", price: "$0 upfront + 10% if won or $1,200–$4,500" },
  { name: "Strategic Advisory (light PMO)", value: "Clear vision, organized budgets, mapped milestones, fewer delays.", price: "$85–$150/hr or $1,500–$6,000/month" },
  { name: "Grant Training & SOPs", value: "Workshops, templates, checklists, and methods to make your team autonomous.", price: "$500–$2,000/workshop or $1,200–$4,000" },
  { name: "Web Security & Speed", value: "Speed audit, security hardening, action plan for better visitor experience.", price: "$400–$1,500" },
  { name: "Web Design & Light Graphics", value: "High-converting home/landing pages, clear copy, tailored visuals.", price: "$350–$2,500" },
  { name: "Essential Documents", value: "Business plans, budgets, pro decks, impact proofs to convince committees.", price: "$750–$4,500" },
  { name: "Media Relations", value: "Press releases, interview prep, key messages for more visibility.", price: "$350–$1,500" },
  { name: "Partnership Development", value: "Find and negotiate public/private/community partners to boost projects.", price: "$85–$150/hr or $1,500–$5,000" },
  { name: "Tourism Development", value: "Design or improve experiences, positioning, visitor journeys.", price: "$1,500–$10,000" },
  { name: "Event Organization", value: "Programming, logistics, sponsors, on-site management.", price: "$600–$10,000" },
  { name: "Management Coaching", value: "Support in HR, finance, marketing, internal organization.", price: "$120–$180/hr" },
  { name: "Museum / Attraction Management", value: "Ops, visitor experience, and promotion for cultural sites.", price: "$1,200–$6,000/month" },
  { name: "AI Adoption", value: "Simple automations, time-saving tools, secure new workflows.", price: "$500–$5,000" },
  { name: "AI Training", value: "Hands-on workshops, best practices, secure internal methods.", price: "$400–$2,000" },
  { name: "Automatic Transcription", value: "Tools to turn meetings into clear notes automatically.", price: "$200–$1,200" },
  { name: "Translation (FR/EN/ES)", value: "Professional translation with QA and glossary.", price: "$0.15–$0.30/word or $50–$150/page" },
  { name: "Fintech/Crypto Education", value: "Plain-language explainer, risk analysis, tailored policies.", price: "$250–$1,000" },
  { name: "Digital Policies", value: "Clear rules for privacy, tech use, cookies, and consents.", price: "$300–$2,000" },
  { name: "Market Research", value: "Quick sector scans, competitor checks, opportunity briefs.", price: "$300–$2,500" },
  { name: "Ready-to-use Kits", value: "Pro templates for grants, comms, HR, projects.", price: "$150–$900" },
  { name: "Law 25 / Data Sovereignty", value: "Compliance and adaptation for Indigenous/community realities.", price: "$250–$1,800" },
  { name: "Rapid Web Pages", value: "Fast bilingual pages with analytics tracking.", price: "$250–$1,500" },
  { name: "Document Doctoring", value: "Rewrite, clarify, format, and improve visuals.", price: "$150–$600" },
  { name: "Indigenous Relations & Governance", value: "Briefs, prep for government meetings, negotiation support.", price: "$120–$200/hr or $1,500–$8,000" },
  { name: "Community Consultation", value: "Workshops, facilitation, testimonies, recommendation reports.", price: "$1,500–$12,000" },
  { name: "Data Sovereignty / Privacy", value: "Secure practices aligned with laws and community needs.", price: "$600–$3,500" },
  { name: "Executive Notes", value: "Concise notes for leaders, key messages, decision summaries.", price: "$150–$900" },
  { name: "Cloud Modernization", value: "Migrate to secure cloud environments.", price: "$1,000–$8,000" },
  { name: "Cybersecurity", value: "Security review, protection, incident readiness.", price: "$400–$2,500" },
  { name: "Microsoft 365 / SharePoint Deployment", value: "Organization, access, security, team adoption.", price: "$500–$3,500" },
  { name: "Service Desk Optimization", value: "Improve support processes to cut delays and errors.", price: "$300–$2,000" },
  { name: "DevOps Automation", value: "Pipelines to ship faster, more stable, more safely.", price: "$600–$4,000" },
  { name: "Data & GIS Analysis", value: "Dashboards, maps, text analytics.", price: "$400–$4,000" },
  { name: "RFPs & Vendor Risk", value: "Prep for RFPs and assess supplier risks.", price: "$350–$2,500" },
  { name: "Field Tech Support", value: "Device setup, basic networks, secure access.", price: "$85–$150/hr" },
  { name: "Tri-lingual Comms", value: "FR/EN/ES messages with cultural adaptation.", price: "$150–$900" }
];

const currency = "CAD";

const packages = [
  {
    name: "Starter",
    tagline: "Get your first projects funded and visible.",
    priceRange: `From $750–$2,500 ${currency}`,
    idealFor: "Small organizations, entrepreneurs, first-time applicants.",
    highlight: "Focus on one key initiative (grant, document, or landing page).",
    features: [
      "1 priority project (grant, key document, or landing page)",
      "Program fit check + dossier review",
      "1 key document (business plan / pitch / budget) – concise format",
      "Basic media kit: 1-page overview + short bio/org profile",
      "1 hour of coaching (strategy or operations)",
      "Email support during the mandate (limited volume)"
    ]
  },
  {
    name: "Professional",
    tagline: "Structure your growth and improve win rates.",
    priceRange: `From $3,000–$8,000 ${currency}`,
    idealFor: "Established organizations with multiple projects in pipeline.",
    highlight: "Bundle of funding, strategy, and digital presence for 2–3 key projects.",
    features: [
      "Up to 3 active projects (grants, products, or campaigns)",
      "Full grant optimization: scouting, drafting, impact framing",
      "Business plan or strategic roadmap (10–20 pages)",
      "Press release + key messages + basic media outreach",
      "1 optimized landing page (bilingual possible) with analytics",
      "Light web security & performance audit (Core Web Vitals + risks)",
      "Monthly check-in (2 × 60 minutes) for 3 months",
      "Templates: grant checklist, partner pitch email, follow-up script"
    ]
  },
  {
    name: "Enterprise",
    tagline: "Multi-project support, governance, and long-term capacity building.",
    priceRange: `From $9,000–$25,000+ ${currency}`,
    idealFor: "Cultural institutions, Indigenous organizations, complex portfolios.",
    highlight: "Ongoing advisory + light PMO across funding, governance, and digital.",
    features: [
      "Dedicated support for a project portfolio over 6–12 months",
      "Strategic advisory & light PMO (roadmaps, milestones, risk tracking)",
      "Multiple grant dossiers (major funders / multi-year projects)",
      "Tourism product / museum / attraction development support",
      "Indigenous relations & government negotiation (briefs, notes, prep)",
      "Community consultation programs: design, facilitation, synthesis report",
      "AI & digital modernization roadmap (process, policy, tooling)",
      "Governance & policy support (Law 25 / privacy / data sovereignty alignment)",
      "Quarterly strategy review with leadership (2–3h working session)"
    ],
    badge: "Most comprehensive"
  }
];
---

<Layout title={meta.title} description={meta.description} url={meta.url} image={meta.image} ogImageAlt={meta.imageAlt} locale={meta.locale} alternates={alternates}>
	<SiteHeader
		navLinks={navLinks}
		brandingSmall={footer.brandingSmall}
		calendlyUrl={topCtas.calendly}
		primaryCtaLabel="Book a call"
		langToggle={{ label: 'Français', href: '/services', ariaLabel: 'Voir les services en français', lang: 'fr' }}
		anchorId="services-top"
	/>

	<section class="page-hero">
		<div class="container">
			<p class="section-title">Services & packages</p>
			<h1>Modular services to fund, deliver, and secure your projects</h1>
			<p class="intro">
				Pick à la carte or choose a bundled package. Every mandate is adjusted after a discovery call.
			</p>
		</div>
	</section>

	<section class="table-section">
		<div class="container">
			<h2>À la carte services</h2>
			<div class="table-wrap">
				<table class="services-table">
					<thead>
						<tr>
							<th>Service</th>
							<th>Client value</th>
							<th>Typical cost</th>
						</tr>
					</thead>
					<tbody>
						{services.map((s) => (
							<tr>
								<td>{s.name}</td>
								<td>{s.value}</td>
								<td>{s.price}</td>
							</tr>
						))}
					</tbody>
				</table>
			</div>
		</div>
	</section>

	<section class="table-section">
		<div class="container">
			<h2>Packages</h2>
			<p class="muted">Indicative in Canadian dollars; finalized after needs assessment.</p>
			<div class="cards-grid">
				{packages.map((pkg) => (
					<article class={`card ${pkg.badge ? 'card-highlight' : ''}`}>
						<div class="card-header">
							<h3>{pkg.name}</h3>
							{pkg.badge && <span class="badge">{pkg.badge}</span>}
						</div>
						<p class="tagline">{pkg.tagline}</p>
						<p class="price">{pkg.priceRange}</p>
						<p class="meta">Ideal for: {pkg.idealFor}</p>
						<p class="highlight">{pkg.highlight}</p>
						<ul>
							{pkg.features.map((f) => (
								<li>{f}</li>
							))}
						</ul>
						<div class="card-actions">
							<a class="button primary" href={topCtas.calendly} target="_blank" rel="noreferrer">Discuss this package</a>
						</div>
					</article>
				))}
			</div>
			<p class="meta center">Approximate amounts in CAD. Custom mandates and mix-and-match options available.</p>
		</div>
	</section>

	<SiteFooter footer={footer} navLinks={navLinks} topCtas={topCtas} />

	<style>
		.page-hero {
			background: #fff;
			padding: 3rem 1.5rem 2rem;
		}
		.page-hero h1 {
			max-width: 760px;
		}
		.intro {
			max-width: 780px;
			color: var(--color-muted);
			font-size: 1.05rem;
		}
		.table-section {
			padding: 3rem 1.5rem;
		}
		.table-wrap {
			overflow-x: auto;
			border-radius: 1.25rem;
			box-shadow: 0 20px 45px rgba(6, 24, 12, 0.08);
			background: #fff;
			margin-top: 1rem;
		}
		.services-table {
			width: 100%;
			border-collapse: collapse;
			min-width: 360px;
		}
		.services-table th,
		.services-table td {
			text-align: left;
			padding: 1rem 1.1rem;
			vertical-align: top;
		}
		.services-table thead {
			background: rgba(20, 108, 67, 0.08);
			color: var(--color-deep-green);
		}
		.services-table tbody tr:nth-child(odd) {
			background: rgba(0, 0, 0, 0.01);
		}
		.services-table th:first-child,
		.services-table td:first-child {
			min-width: 200px;
			font-weight: 700;
		}
		.cards-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
			gap: 1.5rem;
			margin-top: 1.5rem;
		}
		.card {
			background: #fff;
			border-radius: 1.5rem;
			padding: 1.5rem;
			border: 1px solid rgba(6, 24, 12, 0.07);
			box-shadow: 0 20px 45px rgba(6, 24, 12, 0.08);
			display: flex;
			flex-direction: column;
			gap: 0.65rem;
		}
		.card-highlight {
			border-color: var(--color-forest);
			box-shadow: 0 25px 60px rgba(20, 108, 67, 0.12);
		}
		.card-header {
			display: flex;
			align-items: center;
			justify-content: space-between;
		}
		.badge {
			background: rgba(20, 108, 67, 0.12);
			color: var(--color-forest);
			border-radius: 999px;
			padding: 0.25rem 0.75rem;
			font-size: 0.75rem;
			font-weight: 700;
		}
		.tagline {
			color: var(--color-muted);
			font-size: 0.95rem;
		}
		.price {
			font-weight: 700;
			font-size: 1.05rem;
		}
		.meta {
			color: var(--color-muted);
			font-size: 0.92rem;
		}
		.meta.center {
			text-align: center;
			margin-top: 1rem;
		}
		.highlight {
			font-weight: 600;
		}
		.card ul {
			padding-left: 1.1rem;
			margin: 0.5rem 0 0;
			display: flex;
			flex-direction: column;
			gap: 0.4rem;
			color: var(--color-dark);
		}
		.card-actions {
			margin-top: auto;
		}
		.button.primary {
			width: 100%;
			justify-content: center;
		}
	</style>
</Layout>
