---
export interface Props {
	footer: {
		brandingSmall: string;
		ratingHtml: string;
		policyLink?: { label: string; href: string };
		sitemapLink?: { label: string; href: string };
		legal: string;
		legalSuffix: string;
		credits?: string;
	};
	navLinks: { label: string; href: string }[];
	topCtas: { phone: string; mail: string };
}

const { footer, navLinks, topCtas } = Astro.props;
---

<footer class="footer">
	<div class="container">
		<div class="branding footer-branding">
			<span>Aiionwatha</span>
			<small>{footer.brandingSmall}</small>
		</div>
		<div class="footer-contact">
			<span set:html={footer.ratingHtml} />
			<a href={topCtas.phone}>(581) 578-2260</a>
			<a href={topCtas.mail}>steven.germain.gl@gmail.com</a>
		</div>
		<div class="footer-nav">
			{navLinks.map((link) => (
				<a href={link.href}>{link.label}</a>
			))}
		</div>
		<div class="footer-links">
			{footer.policyLink && (
				<a class="policy-link" href={footer.policyLink.href}>{footer.policyLink.label}</a>
			)}
			{footer.sitemapLink ? (
				<a class="policy-link" href={footer.sitemapLink.href}>{footer.sitemapLink.label}</a>
			) : (
				<a class="policy-link" href="/sitemap-index.xml">Sitemap</a>
			)}
		</div>
		<p class="legal">
			{new Date().getFullYear()}
			{footer.legalSuffix}
		</p>
		{footer.credits && <p class="credits">{footer.credits}</p>}
	</div>
</footer>

<style>
	.footer {
		background: var(--color-deep-green);
		color: rgba(255, 255, 255, 0.85);
		padding: 3rem 1.5rem 2rem;
	}

	.footer a {
		color: inherit;
	}

	.footer-branding span {
		color: #fff;
	}

	.footer-contact {
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
		font-weight: 500;
	}

	.footer-nav {
		display: flex;
		gap: 1.5rem;
		flex-wrap: wrap;
		margin: 1rem 0 2rem;
	}

	.footer-links {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
		margin: 0.5rem 0 1rem;
		font-size: 0.95rem;
		color: rgba(255, 255, 255, 0.85);
	}

	.policy-link {
		color: inherit;
		text-decoration: underline;
	}

	.legal {
		margin: 0.25rem 0 0.75rem;
	}

	.credits {
		font-size: 0.85rem;
		color: rgba(255, 255, 255, 0.7);
	}
</style>
